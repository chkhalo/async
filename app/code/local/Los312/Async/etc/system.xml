<?xml version="1.0"?>
<config>
    <sections>
        <los312_async translate="label" module="los312_async">
            <label>Async Blocks Loader</label>
            <tab>general</tab>
            <frontend_type>text</frontend_type>
            <sort_order>999</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <los312_async_enable translate="label">
                    <label>Enable</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Active</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <allow_ips translate="label">
                            <label>Developer Client Restrictions</label>
                            <comment>Allowed IPs (comma separated) - Leave empty for access from any location.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </allow_ips>
                    </fields>
                </los312_async_enable>
                <los312_async_design translate="label">
                    <label>Placeholder</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Use Placeholder</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <loader_image translate="label">
                            <label>Loader_image</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                                <custom>0</custom>
                            </depends>
                        </loader_image>
                        <custom translate="label">
                            <label>Custom Placeholder</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </custom>
                        <block translate="label">
                            <label>Block</label>
                            <comment>Magento block (default: async_placeholder/template).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <custom>1</custom>
                            </depends>
                        </block>
                        <block_template translate="label">
                            <label>Template</label>
                            <comment>Magento template (default: los312/async/placeholder.phtml).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>15</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <custom>1</custom>
                            </depends>
                        </block_template>
                    </fields>
                </los312_async_design>
                <los312_async_advanced translate="label">
                    <label>Advansed</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <adapter translate="label">
                            <label>Adapter</label>
                            <frontend_type>select</frontend_type>
                            <source_model>los312_async/system_config_adapter</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </adapter>
                        <storage translate="label">
                            <label>Storage</label>
                            <frontend_type>select</frontend_type>
                            <source_model>los312_async/system_config_storage</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </storage>

                        <waiting_time_limit translate="label">
                            <label>Waiting remoute response time limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </waiting_time_limit>

                        <remout_time_limit translate="label">
                            <label>Remout rendering time limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </remout_time_limit>

                        <ajax_active translate="label">
                            <label>Use remout ajax loading</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ajax_active>

                        <remout_ajax_time_limit translate="label">
                            <label>Remout ajax rendering time limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <ajax_active>1</ajax_active>
                            </depends>
                        </remout_ajax_time_limit>
                    </fields>
                </los312_async_advanced>
            </groups>
        </los312_async>
    </sections>
</config>
