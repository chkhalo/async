<?xml version="1.0"?>
<config>
    <modules>
        <Los312_Async>
            <version>0.1.0</version>
        </Los312_Async>
    </modules>
    <frontend>
        <layout>
            <updates>
                <los312_async>
                    <file>los312_async.xml</file>
                </los312_async>
            </updates>
        </layout>
    </frontend>
    <global>
        <blocks>
            <los312_async>
                <class>Los312_Async_Block</class>
            </los312_async>
        </blocks>
        <models>
            <los312_async>
                <class>Los312_Async_Model</class>
            </los312_async>
        </models>
        <helpers>
            <los312_async>
                <class>Los312_Async_Helper</class>
            </los312_async>
        </helpers>
        <events>
            <controller_action_layout_render_before>
                <observers>
                    <los312_async_check>
                        <class>Los312_Async_Model_Observer</class>
                        <method>asyncBlockRender</method>
                    </los312_async_check>
                    <los312_async_render>
                        <class>Los312_Async_Model_Observer</class>
                        <method>asyncRenderBlocks</method>
                    </los312_async_render>
                </observers>
            </controller_action_layout_render_before>
            <http_response_send_before>
                <observers>
                    <los312_async_insert>
                        <class>Los312_Async_Model_Observer</class>
                        <method>asyncInsertBlocks</method>
                    </los312_async_insert>

                    <los312_async_profiler_stop>
                        <class>Los312_Async_Model_Observer</class>
                        <method>asyncProfilerStop</method>
                    </los312_async_profiler_stop>
                </observers>
            </http_response_send_before>
        </events>
    </global>
    <default>
        <los312_async>
            <adapter>curl</adapter>
        </los312_async>
    </default>
</config>
